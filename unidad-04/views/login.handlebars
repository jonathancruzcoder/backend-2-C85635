<h1>Login</h1>

{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}

<form method="POST" action="/api/users/login">
  <label>Email</label>
  <input name="email" type="email" required />

  <label>Password</label>
  <input name="password" type="password" required />

  <button type="submit">Ingresar</button>
</form>
